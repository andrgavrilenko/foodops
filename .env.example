# Database (local Docker PostgreSQL)
# Note: Port 5433 is mapped to avoid conflicts with local PostgreSQL on 5432
DATABASE_URL="postgresql://foodops:foodops@localhost:5433/foodops?schema=public"

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=debug
CORS_ORIGIN=http://localhost:3001

# Redis (local Docker Redis)
# Will be used for caching and background job queues in Phase 2+
REDIS_URL="redis://localhost:6379"

# Authentication & Security
# IMPORTANT: Generate a secure random string for production
# Example: openssl rand -base64 32
JWT_SECRET="change-me-in-production-use-openssl-rand-base64-32"

# OpenAI API (for AI menu generation in Phase 2)
# Get your API key from https://platform.openai.com
OPENAI_API_KEY="sk-your-openai-api-key-here"
